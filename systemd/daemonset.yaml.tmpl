# This file uses golang template processing to update the configuration
# It depends on the environment variables:
# PUBLIC_KEY_FILE
# JUMP_USER
# when applytmpl was last run the environment variables were set to:
# PUBLIC_KEY_FILE  {{ .PublicKeyFile }}
# JUMP_USER  {{ .JumpUser }}
# .PublicKeyFile  {{ .PublicKeyFile }}
# .JumpUser  {{ .JumpUser }}

---
apiVersion: v1
kind: Secret
metadata:
  name: jump-{{.JumpUser}}-ds
  namespace: default
data:
  authorized_keys: '{{ file2string .PublicKeyFile  | base64Encode }}'
  config: '{{ file2string "systemd/dot.ssh/config" | base64Encode }}'

---
# for versions before 1.8.0 use apps/v1beta1
apiVersion: apps/v1beta2
kind: DaemonSet
metadata:
  name: jump-{{.JumpUser}}-ds
  namespace: default
  labels:
    app: jump-{{.JumpUser}}-ds
spec:
  selector:
    matchLabels:
      name: jump-{{.JumpUser}}-ds
  template:
    metadata:
      labels:
        name: jump-{{.JumpUser}}-ds
    spec:
      containers:
      - name: ssh
        image: {{.DockerUser}}/{{.Image}}:latest
        # imagePullPolicy: IfNotPresent
        imagePullPolicy: Always
        securityContext:
          privileged: true
        volumeMounts:
        - name: ssh
          mountPath: /home/{{ .JumpUser }}/ssh
          readOnly: false
        - mountPath: /sys/fs/cgroup
          name: fs-cgroup
      volumes:
      - name: ssh
        secret:
          secretName: jump-{{.JumpUser}}-ds
          defaultMode: 420
      - name: fs-cgroup
        hostPath:
          path: /sys/fs/cgroup
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirstWithHostNet

# ------------------------- Service ------------------------- #
---
apiVersion: v1
kind: Service
metadata:
  name: jump-{{.JumpUser}}-ds
  labels:
    app: jump-{{.JumpUser}}-ds
spec:
  ports:
  - port: 2222
    targetPort: 22
    name: ssh
  selector:
    name: jump-{{.JumpUser}}-ds
  loadBalancerIP: 192.168.0.224
  type: LoadBalancer

